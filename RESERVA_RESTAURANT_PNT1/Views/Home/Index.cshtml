@{
    ViewData["Title"] = "Home Page";
}

<div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="true">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/img/pexels-engin-akyurt-1438672.jpg" class="d-block w-100" alt="Pasta Alfredo">
        </div>
        <div class="carousel-content">
            <div>
                <img class="inner-text" src="~/img/Logo.svg" alt="Logo">

                @* <p class="inner-text">El Bodegon de <span class="logo-text">PNT</span></p> *@
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/img/pexels-lisa-1279330.jpg" class="d-block w-100" alt="Pasta Capresse">
        </div>
        <div class="carousel-item">
            <img src="~/img/pexels-valeria-boltneva-1639562.jpg" class="d-block w-100" alt="Hamburguesa">
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Anterior</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Siguiente</span>
    </button>
</div>

<div class="row row-cols-1 row-cols-md-1 g-4 pt-4">
    <div class="col">
        <div class="card">
            <a class="nav-link text-dark" asp-area="" asp-controller="Platos" asp-action="Index">
                <img src="~/img/pexels-photo-3184192.jpeg" class="card-img-top" alt="Comidas">
                <div class="card-body">
                    <h5 class="card-title text-dark text-center">Nuestros Platos</h5>
                    <p class="card-text text-dark text-center">Descripcion Platos</p>
                </div>
            </a>
        </div>
    </div>
    <div class="col">
        <div class="card">
            <a class="nav-link text-dark" asp-area="" asp-controller="Bebidas" asp-action="Index">
                <img src="~/img/pexels-photo-1283219.jpeg" class="card-img-top" alt="Bebidas">
                <div class="card-body">
                    <h5 class="card-title text-dark text-center">Nuestras Bebidas</h5>
                    <p class="card-text text-dark text-center">Descripcion Bebidas</p>
                </div>
            </a>
        </div>
    </div>

    <div class="col">
        <div class="card w-100">
            <a class="nav-link text-dark" asp-area="" asp-controller="ReservasCliente" asp-action="Index">
                <img src="~/img/pexels-photo-2788792.webp" class="card-img-top" alt="Reserva">
                <div class="card-body">
                    <h5 class="card-title text-dark text-center">Reservas</h5>
                    <p class="card-text text-dark text-center">Realizar Reservas</p>
                </div>
            </a>

        </div>
    </div>

</div>
